// Input device configuration
// Corresponds to Hyprland's input section in settings.conf

input {
    keyboard {
        xkb {
            layout "us"
        }

        // Enable NumLock at startup
        numlock
    }

    touchpad {
        // tap-to-click and disable-while-typing
        tap
        dwt

        // enable natural scrolling
        natural-scroll
    }
}
